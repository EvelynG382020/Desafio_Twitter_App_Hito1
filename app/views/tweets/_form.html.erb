<div class="text center mx-auto col-md-3 offset-md-2">
  <%= search_form_for @q do |f| %> 
  <div class="text center form-group">
      <%= f.label :content_cont, "Search" %>
      <%= f.search_field :content_cont, class: "form-control", placeholder: "Search" %>
      <%= f.submit "Search", class: "btn btn-primary" %> 
  <% end %>
  </div>
</div>

<br>

<div class="container">
  <i class="fab fa-twitter fa-6x"></i>

<br>
<%= form_with(model: tweet, local: true) do |form| %>
  <% if tweet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tweet.errors.count, "error") %> prohibited this tweet from being saved:</h2>

      <ul>
      <% tweet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card text-center mx-auto col-md-6 mb-3">
    <h3 class="card-title py-3">Qué está pasando! Tweetea</h3>
    <div class="form-group">
        <%= form.text_area(:content, rows: 3, class: 'col-md-7') %>
    </div>
    <div class="actions my-2">
      <%= form.submit "Pincha Aquí!!", :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>
</div>
